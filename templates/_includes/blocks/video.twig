{# ? |replace the iframe width="[0-9+]" and height="[0-9+]" so the aspect-ratio class works #}

<div class="container mx-auto px-6 py-10 lg:py-20">
	{% if block.text %}
		<article class="prose mb-10">
			{{ block.text }}
		</article>
	{% endif %}

	{{
		block.videoEmbedCode
			|retconAttr(
				'iframe',
				{
					class: 'w-full aspect-video',
					width: false,
					height: false,
					loading: 'lazy'
				}
			)
			|raw
	}}
</div>
