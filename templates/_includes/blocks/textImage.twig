{% import '_includes/macros' as macros %}

{% set asset = block.image.one %}

{% set transform = {
	width: 868
} %}

<div class="container mx-auto px-6 py-10">
	<div class="grid grid-cols-12">
		<div class="col-span-12 lg:col-span-7 {{ block.layout == 'textImage' ? 'lg:order-last lg:col-start-6' }}">
			{{ macros.image(asset, transform, 'mb-4 lg:mb-0') }}
		</div>
		<div class="col-span-12 lg:col-span-4 {{ block.layout == 'textImage' ? '' : 'lg:col-start-9' }}">
			<article class="prose">
				{{ block.text }}
			</article>

			{% set buttons = block.buttons %}
			{% if not buttons.isEmpty %}
				<div class="pt-10">
					{% for button in buttons %}
						{{ macros.button(button.url, button.text, 'btn mr-2', button.target) }}
					{% endfor %}
				</div>
			{% endif %}
		</div>
	</div>
</div>
