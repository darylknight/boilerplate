{% import '_includes/macros' as macros %}

{% set asset = block.image.one %}

{% set transform = {
	width: 868,
	height: 600
} %}

<div class="container mx-auto px-6 py-10 lg:py-20">
	<div class="grid grid-cols-12">
		<div
			class="col-span-12 flex items-center lg:col-span-7 {{
			block.layout == 'textImage'
				? 'lg:order-last lg:col-start-6'
			}}"
		>
			{{ macros.image(asset, transform, 'mb-4 lg:mb-0') }}
		</div>
		<div
			class="col-span-12 flex items-center lg:col-span-4 {{
			block.layout == 'textImage'
				? ''
				: 'lg:col-start-9'
			}}"
		>
			<div>
				<article class="prose">
					{{ block.text }}
				</article>

				{% set buttons = block.buttons %}
				{% if buttons %}
					<div class="pt-10">
						{% for row in buttons %}
							{{
								macros.button(
									row.button.url,
									row.button.label,
									'btn mr-2'
								)
							}}
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</div>
	</div>
</div>
