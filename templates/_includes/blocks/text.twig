{% import '_includes/macros' as macros %}

<div class="container mx-auto p-4 lg:py-10">
	{% if block.heading %}
		<h2 class="text-center mb-10 text-xl">
			{{ block.heading }}
		</h2>
	{% endif %}
	{{ macros.text(block.text) }}

	{% if block.button|length %}
		{{ macros.button(block.button.url, block.button.text, 'btn', block.button.target) }}
	{% endif %}
</div>
