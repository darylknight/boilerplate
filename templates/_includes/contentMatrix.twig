{% for block in entry.contentMatrix.all() %}
	{# Run through all the block types in the content matrix field and include the matching file #}
	{% if block.type != 'form' %}
		{# ? Cache the block if it isn't a form, using the block ID #}
		{% cache using key block.id %}
			{% include '_includes/blocks/' ~ block.type %}
		{% endcache %}
	{% else %}
		{% include '_includes/blocks/' ~ block.type %}
	{% endif %}
{% endfor %}
