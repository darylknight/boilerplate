{% if getenv('ENVIRONMENT') == 'production' %}
	{# Add cookie scripts here #}
	{# https://heyklaro.com/docs/ #}
	{# ? In case they break the link again: https://heyklaro.com/docs/integration/annotated-configuration #}

	{# Link to the Klaro config file. You must update the cookieDomain there #}
	<script defer src="/assets/js/klaro-config.js"></script>

	{# Example Google Analytics #}
	{# <script async
		type="text/plain"
		data-type="application/javascript"
		data-src=""
		data-name="googleAnalytics"></script> #}

	{# Link to the Klaro JS #}
	<script
		defer
		data-config="klaroConfig"
		type="application/javascript"
		src="https://cdn.kiprotect.com/klaro/v0.7.12/klaro.js"> </script>

	{% js %}
	// When someone clicks the Klaro button in the footer, open modal
		const klaroButton = document.querySelector('#open-klaro')
		function openKlaro(e) {
			klaro.show()
			e.preventDefault()
		}
		klaroButton.addEventListener('click', openKlaro)
	{% endjs %}
{% endif %}

