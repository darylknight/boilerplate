<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		{# Include local fonts #}
		{% include '_includes/fonts' %}

		{# Adds JS and CSS processed with Vite #}
		{# ? https://nystudio107.com/docs/vite/#the-script-function #}
		{# The false argument here disables async CSS to prevent FOUT #}
		{{ craft.vite.script('src/js/app.js', false) }}

		{# TODO: Add favicon here #}

		{# ? UTM Tracking #}
		{# ? Credit - Steve Rowling #}
		{%- if
			not craft.app.session.get('queryParams')
				and (craft.app.request.getQueryParams()|length) %}
			{% do craft.app.session.set(
				'queryParams',
				craft.app.request.getQueryParams()
			) %}
		{% endif -%}
		{%- set utmParams = ['utm_source', 'utm_medium', 'utm_campaign'] -%}
	</head>

	<body>
		{# Adds the Admin Bar plugin to the page #}
		{{ adminBar() }}

		<a
			class="absolute -m-1 h-0 w-0 overflow-hidden border-0 bg-black p-0 text-center text-white focus:relative focus:m-0 focus:block focus:h-auto focus:w-full focus:p-2"
			href="#main"
		>
			<span>Skip to main content</span>
		</a>

		{% include '_includes/alertBar' %}
		{% include '_includes/header' %}

		<div role="main" id="main">
			{% block content %}

			{% endblock %}
		</div>
		{% include '_includes/footer' %}
	</body>
</html>
